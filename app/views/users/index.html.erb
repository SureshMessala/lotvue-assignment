<div class="container " style="margin: 40px">
  <div>
    <h2>Welcome to Lotvue</h2>
  </div>
  <table class="table table-striped table-bordered table-hover"  style="margin: 40px; margin-left: 0px">
    <thead class="thead-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Role</th>
      <th> </th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user.first_name + ' ' + user.last_name, user %>
        </td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.role.role %></td>
        <td><%= button_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <br>

    <%= link_to 'New User', new_user_path, class:"btn btn-secondary" %>


</div>

<div  style="margin: 50px">
  <%= paginate @users %>
  <br>
</div>